{
  "name": "weben",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "boot": "lerna bootstrap",
    "build": "node ./instruments/cli.js --command build",
    "dev": "node ./instruments/cli.js --command dev",
    "create": "node ./instruments/cli.js --command create",
    "init": "node ./instruments/cli.js --command init",
    "clean": "node ./instruments/cli.js --command clean --ignoreBlackList",
    "upgrade": "node ./instruments/cli.js --command upgrade --emptyIsRoot",
    "release": "node ./instruments/cli.js --command release --emptyIsRoot",
    "test": "npx jest"
  },
  "type": "module",
  "devDependencies": {
    "@microsoft/api-extractor": "^7.13.0",
    "@types/fs-extra": "^9.0.6",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.21",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "chalk": "^4.1.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "3.3.0",
    "esbuild": "^0.8.33",
    "eslint": "^7.18.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "execa": "^5.0.0",
    "fs-extra": "^9.0.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "minimist": "^1.2.5",
    "npm-check-updates": "^10.2.5",
    "prettier": "^2.2.1",
    "prettier-plugin-jsdoc": "^0.3.7",
    "snowpack": "^3.0.11",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3",
    "vite": "^2.0.0-beta.30"
  },
  "dependencies": {
    "@gallop/gallop": "^0.12.0"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint",
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}

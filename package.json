{
  "name": "weben",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "boot": "lerna bootstrap",
    "build": "node ./instruments/cli.js --command build",
    "create": "node ./instruments/cli.js --command create",
    "init": "node ./instruments/cli.js --command init",
    "clean": "node ./instruments/cli.js --command clean",
    "upgrade": "node ./instruments/cli.js --command upgrade",
    "test": "jest"
  },
  "type": "module",
  "devDependencies": {
    "@types/fs-extra": "^9.0.6",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.21",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "chalk": "^4.1.0",
    "commander": "^6.2.1",
    "esbuild": "^0.8.32",
    "eslint": "^7.17.0",
    "eslint-plugin-import": "^2.22.1",
    "execa": "^5.0.0",
    "fs-extra": "^9.0.1",
    "husky": "^4.3.7",
    "inquirer": "^7.3.3",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "minimist": "^1.2.5",
    "npm-check-updates": "^10.2.5",
    "prettier": "^2.2.1",
    "prettier-plugin-jsdoc": "^0.3.7",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@gallop/gallop": "^0.12.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint",
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
